@model LibraryMVC.WebUI.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

    <div class="container" style="margin-top:30px; padding-bottom:50px;">
        <h2>Change your account settings</h2>
        <hr class="col-md-12" style="max-width:500px;" />

        <p class="text-success">@ViewBag.StatusMessage</p>
        <div class="col-md-12">
            <dl class="dl-horizontal text-center">
                <div class="form-group text-center font-weight-bold" style="font-size: 18px; padding-top: 20px;">
                    <dt class="text-center font-weight-bold" style="font-size: 18px;">Password:</dt>
                    <dd>
                        [
                        @if (Model.HasPassword)
                        {
                            @Html.ActionLink("Change your password", "ChangePassword")
                        }
                        else
                        {
                            @Html.ActionLink("Create", "SetPassword")
                        }
                        ]
                    </dd>
                </div>
            </dl>         
        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}