@model LibraryMVC.Core.Models.BookGenre

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container" style="margin-top:30px; margin-bottom:100px;">
        <h2>Genre Editor</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr style="max-width:500px;" />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group text-center font-weight-bold font" style="font-size: 18px;">
                    @Html.LabelFor(model => model.Genre, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
                        @Html.EditorFor(model => model.Genre, new { htmlAttributes = new { @class = "form-control text-center" } })
                        @Html.ValidationMessageFor(model => model.Genre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group text-center">
                    <div class="text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        @Html.ActionLink("Back to List", "Index", "BookGenreManager", null, new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
        }
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
