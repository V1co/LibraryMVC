@model LibraryMVC.Core.Models.BookGenre

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:30px; margin-bottom:30px;">
    <h2>Genre Creator</h2>

    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        <div class="container" style="margin-top:30px; margin-bottom:30px;">
            <div class="form-horizontal">
                <hr style="max-width:500px;" />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group text-center font-weight-bold" style="font-size: 18px">
                    @Html.LabelFor(model => model.Genre, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
                        @Html.EditorFor(model => model.Genre, new { htmlAttributes = new { @class = "form-control text-center" } })
                        @Html.ValidationMessageFor(model => model.Genre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group text-center">
                    <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        @Html.ActionLink("Back to List", "Index", "BookGenreManager", null, new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
        </div>

    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
