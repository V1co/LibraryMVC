@model IEnumerable<LibraryMVC.Core.Models.Book>

@{
    ViewBag.Title = "Index";
}

    <h2 style="margin-top: 30px">Book Manager</h2>
    <div class="container" style="margin-top:30px; padding-bottom:60px; font-size: 20px;">
            <hr style="max-width:500px;" />

            <div class="container">
                <div class="row">
                    <div class="col col-md-12 d-flex justify-content-center justify-content-md-start">
                        @Html.ActionLink("Create New Book", "Create", "BookManager", null, new { @class = "btn btn-info", style = "font-size: 20px; margin-bottom: 20px;" })
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class="text-center"></th>
                            <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.Title)</th>
                            <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.WriterLastName)</th>
                            <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.Genre)</th>
                            <th scope="col" class="text-center">Admin</th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <img class="img-thumbnail" style="height: 50px" src="~/Content/BookImages/@item.Image" />
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.WriterLastName)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Genre)
                            </td>
                            <td class="text-center">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>


