@model LibraryMVC.Core.ViewModels.BookManagerViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:30px; margin-bottom:100px;">
    <h2>Book Editor</h2>


    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr style="max-width:500px;" />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group text-center font-weight-bold" style="font-size: 18px">
        @Html.LabelFor(model => model.Book.Title, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
            @Html.EditorFor(model => model.Book.Title, new { htmlAttributes = new { @class = "form-control text-center" } })
            @Html.ValidationMessageFor(model => model.Book.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center font-weight-bold" style="font-size: 18px">
        @Html.LabelFor(model => model.Book.WriterFirstName, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
            @Html.EditorFor(model => model.Book.WriterFirstName, new { htmlAttributes = new { @class = "form-control text-center" } })
            @Html.ValidationMessageFor(model => model.Book.WriterFirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center font-weight-bold" style="font-size: 18px">
        @Html.LabelFor(model => model.Book.WriterLastName, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
            @Html.EditorFor(model => model.Book.WriterLastName, new { htmlAttributes = new { @class = "form-control text-center" } })
            @Html.ValidationMessageFor(model => model.Book.WriterLastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center font-weight-bold" style="font-size: 18px">
        @Html.LabelFor(model => model.Book.ReleaseDate, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
            @Html.EditorFor(model => model.Book.ReleaseDate, new { htmlAttributes = new { @class = "form-control text-center", type = "date" } })
            @Html.ValidationMessageFor(model => model.Book.ReleaseDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center font-weight-bold" style="font-size: 18px">
        @Html.LabelFor(model => model.Book.Publisher, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
            @Html.EditorFor(model => model.Book.Publisher, new { htmlAttributes = new { @class = "form-control text-center" } })
            @Html.ValidationMessageFor(model => model.Book.Publisher, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center font-weight-bold" style="font-size: 18px">
        @Html.LabelFor(model => model.Book.NumberOfBooks, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
            @Html.EditorFor(model => model.Book.NumberOfBooks, new { htmlAttributes = new { @class = "form-control text-center", min = "0" } })
            @Html.ValidationMessageFor(model => model.Book.NumberOfBooks, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center font-weight-bold" style="font-size: 18px">
        @Html.LabelFor(model => model.Book.Genre, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
            @Html.DropDownListFor(model => model.Book.Genre, new SelectList(Model.Genres, "Genre", "Genre"), new { htmlAttributes = new { @class = "form-control text-center" } })
        </div>
    </div>

    <div class="form-group text-center font-weight-bold" style="font-size: 18px">
        @Html.LabelFor(model => model.Book.Format, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
            @Html.DropDownListFor(model => model.Book.Format, new SelectList(Model.Formats, "Format", "Format"), new { htmlAttributes = new { @class = "form-control text-center" } })
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.Book.Description, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
                @Html.TextAreaFor(model => model.Book.Description, new { htmlAttributes = new { @class = "form-control text-center" }, rows = 10, cols = 36, style = "font-size: 16px;" })
                @Html.ValidationMessageFor(model => model.Book.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center font-weight-bold" style="font-size: 18px">
            @Html.LabelFor(model => model.Book.Image, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
                @Html.EditorFor(model => model.Book.Image, new { htmlAttributes = new { @class = "form-control text-center" } })
                @Html.ValidationMessageFor(model => model.Book.Image, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            <div class="text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Back to List", "Index", "BookManager", null, new { @class = "btn btn-info" })
            </div>
            </div>
        </div>
    </div>
    }
</div>
    



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}