@model LibraryMVC.WebUI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

    <div class="container" style="margin-top:30px; padding-bottom:50px;">
        <h2>Create new account</h2>
        <hr class="col-md-12" style="max-width:500px;" />

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="container" style="margin-top:30px; margin-bottom:30px;">
                @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger text-center font-weight-bold" })
                <div class="form-group text-center font-weight-bold" style="font-size: 18px">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 mx-auto">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                
                <div class="form-group text-center font-weight-bold" style="font-size: 18px">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 mx-auto">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group text-center font-weight-bold" style="font-size: 18px">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 mx-auto">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group text-center font-weight-bold" style="font-size: 18px">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 mx-auto">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group text-center font-weight-bold" style="font-size: 18px">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 mx-auto">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group text-center font-weight-bold" style="font-size: 18px">
                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 mx-auto">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group text-center font-weight-bold" style="font-size: 18px">
                    @Html.LabelFor(m => m.Street, new { @class = "col-md-2 control-label" })
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 mx-auto">
                        @Html.TextBoxFor(m => m.Street, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group text-center font-weight-bold" style="font-size: 18px">
                    @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 mx-auto">
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group text-center font-weight-bold" style="font-size: 18px">
                    @Html.LabelFor(m => m.County, new { @class = "col-md-2 control-label" })
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 mx-auto">
                        @Html.TextBoxFor(m => m.County, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group text-center font-weight-bold" style="font-size: 18px; margin-bottom: 28px;">
                    @Html.LabelFor(m => m.PostCode, new { @class = "col-md-2 control-label" })
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 mx-auto">
                        @Html.TextBoxFor(m => m.PostCode, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group text-center">
                    <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 mx-auto">
                        <input type="submit" class="btn btn-primary" value="Register" />
                        @Html.ActionLink("Back to Home Page", "Index", "Home", null, new { @class = "btn btn-info" })
                    </div>
                </div>
                </div>
            }
            
    </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
                @Scripts.Render("~/Content/style.css")
            }
