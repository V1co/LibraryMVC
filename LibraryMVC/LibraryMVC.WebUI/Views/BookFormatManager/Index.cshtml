@model IEnumerable<LibraryMVC.Core.Models.BookFormat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2 style="margin-top: 30px">Format Manager</h2>
    <div class="container" style="margin-top:30px; margin-bottom:30px; font-size: 20px;">
        <hr style="max-width:500px;" />

        <div class="container">
            <div class="row">
                <div class="col col-md-12 d-flex justify-content-center justify-content-md-start">
                    @Html.ActionLink("Create New Format", "Create", "BookFormatManager", null, new { @class = "btn btn-info", style = "font-size: 20px; margin-bottom: 20px;" })
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Format)
                        </th>
                        <th class="text-center">
                            @Html.DisplayName("Admin")
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Format)
                            </td>
                            <td class="text-center">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

            </table>
        </div>
    </div>
