@model LibraryMVC.Core.ViewModels.BookListViewModel

@{
    ViewBag.Title = "Genres";
}

<div class="container d-block d-lg-flex" style="padding-bottom:60px; margin: 0px; font-size: 20px; padding-top: 60px; max-width:100%">

    <div class="col-6 col-sm-5 col-md-4 col-lg-3 col-xl-2 mx-auto" style="text-align: center; justify-content: center">
        <h3>Filter by Genre:</h3>
        <div class="list-group d-flex justify-content-center">
            @Html.ActionLink("All", "Index", "Genre", new { @class = Request["Genre"] == null ? "list-group-item active" : "list-group-item" })
            @foreach (var c in Model.BookGenres)
            {
                @Html.ActionLink(c.Genre, "Index", new { Genre = c.Genre }, new { @class = Request["Genre"] == c.Genre ? "list-group-item active" : "list-group-item" })
            }
        </div>
    </div>
    <div class="row" style="width: 100%; justify-content: center; margin-left: 0px; margin-top: 20px;">
        @foreach (var item in Model.Books)
        {
            <div class="col-12 col-md-6 col-lg-6 col-xl-4 align-items-center" style="margin-top: 10px; margin-bottom: 10px;">
                <div class="col-md-12 d-flex justify-content-center">
                    <img src="~/Content/BookImages/@item.Image" class="img-thumbnail" style="height: 400px; width: 250px;" />
                </div>
                <div class="col-md-12 text-center">
                    <strong>@Html.ActionLink(item.Title, "Details", "Home", new { id = item.Id }, null)</strong>
                </div>
                <div class="col-md-12 text-center">
                    @item.WriterFirstName
                </div>
                <div class="col-md-12 text-center">
                    @item.WriterLastName
                </div>

            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}