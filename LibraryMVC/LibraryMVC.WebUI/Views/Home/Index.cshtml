    <div class="col-md-3 col-lg-3" style="margin-left: 60px">
        <h3>New Books:</h3>
        <div id="carouselExampleControls1" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @{
                    var first = true;
                    List<LibraryMVC.Core.Models.Book> allBooks = Model.Books.OrderByDescending(a => a.CreatedAt).ThenBy(a => a.Id).ToList();
                }
                @for (int i = 0; i < 5; i++)
                {
                    <div class="carousel-item @(first ? Html.Raw("active") : Html.Raw(""))">
                        <div class="row">
                            <div class="col-sm">
                                <img class="d-block w-100" src="~/Content/BookImages/@allBooks[i].Image" alt="@allBooks[i].Title" style=" width: 200px; height: 500px;">
                                <strong>@Html.ActionLink(@allBooks[i].Title, "Details", new { Id = @allBooks[i].Id })</strong>
                            </div>
                        </div>
                    </div>
                    first = false;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls1" role="button"
               data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls1" role="button"
               data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    @*Recommends is based on random, non repeatable logic*@
    <div class="col-md-3 col-lg-3" style="margin-left: 60px">
        <h3>Recommended:</h3>
        <div id="carouselExampleControls2" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @{
                    var second = true;
                    Random random = new Random();
                    HashSet<int> books = new HashSet<int>();
                }
                @while (books.Count() < 5)
                {
                    int randomIndex = random.Next(Model.Books.Count());
                    books.Add(randomIndex);
                }
                @foreach (var item in Model.Books)
                {
                    <div class="carousel-item @(second ? Html.Raw("active") : Html.Raw(""))">
                        <div class="row">
                            <div class="col-sm">
                                <img class="d-block w-100" src="~/Content/BookImages/@item.Image" style=" width: 200px; height: 500px;" alt="@item.Title">
                                <strong>@Html.ActionLink(@item.Title, "Details", new { Id = item.Id })</strong>
                            </div>
                        </div>
                    </div>
                    second = false;
                }
            </div>

            <a class="carousel-control-prev" href="#carouselExampleControls2" role="button"
               data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls2" role="button"
               data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="col-md-2" style="margin-left: 60px">
