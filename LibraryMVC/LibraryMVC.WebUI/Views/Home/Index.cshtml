@model IList<LibraryMVC.Core.Models.Book>

@{
    ViewBag.Title = "Home Page";
}

<h1>Welcome</h1>
<hr style="max-width:500px; justify-content: center;" />

<div class="container" style="margin-top:30px; margin-bottom:30px; display: flex; justify-content: center;">

    <div class="col-md-4">
        <h2>New Books:</h2>
        <div id="carouselExampleControls1" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @{
                    var first = true;
                    List<LibraryMVC.Core.Models.Book> allBooks = Model.OrderByDescending(a => a.CreatedAt).ThenBy(a => a.Id).ToList();
                }
                @for (int i = 0; i < 5; i++)
                {
                    <div class="carousel-item @(first ? Html.Raw("active") : Html.Raw(""))">
                        <div class="row">
                            <div class="col-sm"><img class="d-block w-100" src="~/Content/BookImages/@allBooks[i].Image" alt="@allBooks[i].Image" style=" width: 200px; height: 500px;"></div>
                        </div>
                    </div>
                    first = false;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls1" role="button"
               data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls1" role="button"
               data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

        @*Recommends is based on random, non repeatable logic*@
        <div class="col-md-4">
            <h2>Recommended:</h2>
        <div id="carouselExampleControls2" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @{
                    var second = true;
                    Random random = new Random();
                    HashSet<int> books = new HashSet<int>();
                }
                @while (books.Count() < 5)
                {
                    int randomIndex = random.Next(Model.Count());
                    books.Add(randomIndex);
                }
                @foreach (var item in books)
                {
                    <div class="carousel-item @(second ? Html.Raw("active") : Html.Raw(""))">
                        <div class="row">
                            <div class="col-sm"><img class="d-block w-100" src="~/Content/BookImages/@Model[item].Image" style=" width: 200px; height: 500px;"></div>
                        </div>
                    </div>
                    second = false;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls2" role="button"
               data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls2" role="button"
               data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
            </div>
    </div>

